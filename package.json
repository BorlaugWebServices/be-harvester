{
    "name": "be-harvester",
    "version": "1.0.0",
    "description": "Listen to blocks and transactions and writes to be-datastore",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "start": "set DEBUG=be-harvester:*,be-datastore:* & node dist",
        "migration": "tsc && set DEBUG=be-harvester:*,be-datastore:* & node dist/migration/up.js",
        "rollback": "tsc && DEBUG=be-harvester:*,be-datastore:* node dist/migration/down.js"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com/BorlaugWebServices/be-harvester.git"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "ts-node": "^10.9.2",
        "tslint": "^6.1.3",
        "ttypescript": "^1.5.15",
        "typescript": "^5"
    },
    "dependencies": {
        "@polkadot/api": "9",
        "@types/debug": "^4.1.12",
        "be-datastore": "git+https://github.com/BorlaugWebServices/be-datastore.git#sandbox",
        "debug": "4.3.4",
        "dotenv": "^8.2.0",
        "jayson": "^3.2.0",
        "lodash": "^4.17.15"
    }
}